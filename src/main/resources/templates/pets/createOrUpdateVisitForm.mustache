{{!
<!DOCTYPE html>

<html lang="en">

  <body>}}

{{<fragments/layout}}{{$menu}}owners{{/menu}}{{$body}}

  <h2>
    {{#visit.new}}New {{/visit.new}} Visit
  </h2>

{{#pet}}
  <b>Pet</b>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Birth Date</th>
        <th>Type</th>
        <th>Owner</th>
      </tr>
    </thead>
    <tr>
      <td>{{name}}</td>
      <td>{{birthDate}}</td>
      <td>{{type}}</td>
      {{#owner}}<td>{{owner.firstName}} {{lastName}}</td>{{/owner}}
    </tr>
  </table>
{{/pet}}

  <form class="form-horizontal" method="post">
    <div class="form-group has-feedback">
      {{#form}}
        {{#date}}{{<fragments/inputField}}Date <input name="date" type="date"/>{{/fragments/inputField}}{{/date}}
        {{#description}}{{<fragments/inputField}}Description <input name="description"/>{{/fragments/inputField}}{{/description}}
      {{/form}}
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <input type="hidden" name="petId" th:value="${pet.id}" />
        <button class="btn btn-primary" type="submit">Add Visit</button>
      </div>
    </div>
  </form>

  <br />
  <b>Previous Visits</b>
  <table class="table table-striped">
    <tr>
      <th>Date</th>
      <th>Description</th>
    </tr>
    {{#pet.visits}}{{^new}}<tr>
      <td>{{date}}</td>
      <td>{{description}}</td>
    </tr>{{/new}}{{/pet.visits}}
  </table>


{{/body}}{{/fragments/layout}}

{{!  </body>

</html>}}
